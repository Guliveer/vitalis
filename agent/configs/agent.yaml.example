server:
  url: "https://your-app.vercel.app"
  machine_token: "your-machine-token"

collection:
  interval: "15s"
  batch_interval: "30s"
  top_processes: 10

buffer:
  max_size_mb: 50
  db_path: "./buffer"

logging:
  level: "info"
  file: "./agent.log"

# Auto-update configuration
update:
  # Enable automatic updates from GitHub Releases (default: false)
  enabled: false
  # How often to check for new releases
  check_interval: "1h"
